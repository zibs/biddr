<% if @auction.errors.any? %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 alert alert-danger">
    <p>The form contains <strong><%= pluralize(@auction.errors.count, "error") %></strong>.</p>
  <ul>
    <% @auction.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  </div>
</div>
<% end %>
<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for @auction do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class = "form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: "form-control" %>
    </div>
    <div class = "form-group">
      <%= f.label :ends_on %>
      <%= f.text_field :ends_on, data: {provide: 'datepicker'} %>
    </div>
    <div class = "form-group">
        <%= f.label :reserve_price %>
        <%= f.text_field :reserve_price,
          :value => (number_with_precision(f.object.reserve_price, :precision => 2) || 0), class: 'form-control' %>
      </div>
    <div class = "form-group">
      <%= f.submit "Create Auction!", class: "btn btn-primary-outline btn-block" %>
    </div>
    <% end %>
  </div>
</div>
